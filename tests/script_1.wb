# land adjustments
sealevel	-100m
// sealevel	0.001	(Z value rather than meters)
// sealevel	2km	(ERROR: illegal value)
// sealevel		(ERROR: missing argument)

slope   	-20 0.0025
// slope	0	(ERROR, missing argument)
// slope		(EROR, missing arguments)

mountain	<x1,y1>-<x2,y2>, 1250m
canyon		<x1,y1>-<x2,y2>, -200m

river		<0.1,0.2> 200m3/s
river		<0.3,0.4> 100
// river	<x1,y1>		(ERROR, missing argument)
// river	<0.5,0.6> 300X	(ERROR, incorrect unit)
// river	<x1,y1>, 400m3/s (ERROR, non-numeric values)
// river	<0.5>, 0	(ERROR, missing y-value)

rainfall	<-0.5,-0.5>-<0.5,0.5>	100cm/y
rainfall	<-0.25,-0.25>-<0.25,0.25> 200
