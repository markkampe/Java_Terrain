// rainfall	<0,0>-<,>	0	(ERROR, no contents)
// rainfall	<0,0>-<1,>	0	(ERROR, missing Y)
// rainfall	<0,0>-<1>	0	(ERROR, missing Y)
// rainfall	<0,0>-<1,y>	0	(ERROR, non-numeric values)

minerals	<-0.1,-0.1>-<0.1,0.1>	Iron
flora		<-0.2,-0.2>-<0.2,0.2>	Riperian
fauna		<-0.3,-0.3>-<0.3,0.3>	Fish

# points of interest
PoI		<-0.1,-0.1>	ENTRY "Plymouth Harbor"
PoI		<0.1,-0.1>	EXIT "Plymouth Gate"

exit	-1
